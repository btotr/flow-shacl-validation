<?xml version="1.0" encoding="UTF-8"?>
<Configuration package="log4j.test" status="WARN">
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%markerSimpleName %-5p %C.%M():%L - %msg %ex{full}%n"/>
    </Console>
</Appenders>
<Loggers>
	 <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
</Loggers>
</Configuration>